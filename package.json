{
  "name": "lib-boilerplate",
  "version": "0.1.0",
  "type": "module",
  "description": "A simple library boilerplate.",
  "repository": "git+https://github.com/un-ts/lib-boilerplate.git",
  "author": "JounQin (https://www.1stG.me) <admin@1stg.me>",
  "funding": "https://opencollective.com/unts",
  "license": "MIT",
  "packageManager": "yarn@4.0.2",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "./lib/index.cjs",
  "module": "./lib/index.js",
  "exports": {
    "types": "./lib/index.d.ts",
    "import": "./lib/index.js",
    "require": "./lib/index.cjs"
  },
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "!**/*.tsbuildinfo"
  ],
  "scripts": {
    "build": "run-p 'build:*'",
    "build:r": "r -f cjs",
    "build:tsc": "tsc -p src",
    "dev": "vitest",
    "docs": "vite docs",
    "lint": "run-p 'lint:*'",
    "lint:es": "eslint . --cache -f friendly --max-warnings 10",
    "lint:style": "stylelint . --cache",
    "lint:tsc": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "release": "yarn build && yarn changeset publish",
    "serve": "vite preview docs",
    "test": "vitest run --coverage",
    "typecov": "type-coverage",
    "vercel-build": "vite build docs --emptyOutDir",
    "version": "changeset version && yarn --no-immutable"
  },
  "dependencies": {
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@1stg/app-config": "^10.0.1",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.5.0",
    "@mdx-js/rollup": "^3.0.0",
    "@pkgr/rollup": "^5.0.0",
    "@size-limit/preset-small-lib": "^11.0.2",
    "@types/mdx": "^2.0.10",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/web": "^0.0.135",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/coverage-v8": "^1.2.1",
    "eslint": "^8.56.0",
    "github-markdown-css": "^5.5.0",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.3",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "simple-git-hooks": "^2.9.0",
    "size-limit": "^11.0.2",
    "stylelint": "^16.2.0",
    "type-coverage": "^2.27.1",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^0.17.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.1"
  },
  "resolutions": {
    "prettier": "^3.5.3"
  },
  "size-limit": [
    {
      "path": "lib/index.js"
    }
  ],
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreNonNullAssertion": true,
    "showRelativePath": true,
    "strict": true,
    "update": true
  }
}
